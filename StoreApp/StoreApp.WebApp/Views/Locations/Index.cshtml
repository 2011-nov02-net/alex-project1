@model IEnumerable<StoreApp.WebApp.Models.LocationViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-dark">Stores</h1>
<form asp-action="Index">
    <div class="input-group">
        <input class="form-control mr-sm-2" type="search" placeholder="Store Name" name="Name" />
        <input class="btn btn-secondary my-2 my-sm-0" type="submit" value="Search" />

    </div>
</form>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Order History", "Details", new { id = item.Id }) |
                @Html.ActionLink("Inventory", "Inventory", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>
